extends layout

block page 
	- var menu = "index"
block content
	if (vouchers.length === 0)
		| No vouchers yet. 
	else 
		each voucher in vouchers
			- voucher = voucher.toJSON()
			div.voucher
				h2
					a(href="/vouchers/" + voucher.code)= voucher.code
					|&nbsp;
					a.btn.btn-primary(href="/vouchers/" + voucher.code + "/edit")  Edit
					|&nbsp;
					a.btn.btn-primary(href="/vouchers/" + voucher.code + "/assign")  Assign
					form.navbar-right(action="/api/vouchers/" + voucher.code + "/delete", method="POST", role="form")
						button.btn.btn-danger(type="submit") Delete
